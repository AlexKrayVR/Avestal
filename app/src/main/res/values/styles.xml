<resources>

    <style name="Widget.Theme.Avestal.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="CustomRadioButton" parent="Theme.AppCompat.Light" >
        <item name="colorControlNormal">@color/colorBDBDBD</item>
        <item name="colorControlActivated">@color/mainColor</item>
    </style>

    <style name="CustomCheckButton" parent="Theme.AppCompat.Light" >
        <item name="colorControlNormal">@color/colorE0E0E0</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ProgressBarRed">
        <item name="colorAccent">@color/mainColor</item>
    </style>


    <style name="AvestalSwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/mainColor</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/white</item>
<!--        <item name="colorAccent">#e91e63</item>-->

<!--        <item name="trackTint">@color/color26DF252C</item>-->

<!--         цвет дорожки для неактивного состояния (30% прозрачности)-->
        <item name="android:colorForeground">@color/mainColor</item>
    </style>

    <style name="Search">
        <item name="android:queryHint">@string/searchOffers</item>

        <item name="android:editTextColor">@color/color121212</item>
        <item name="android:textColorHint">@color/colorBDBDBD</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/color121212</item>

        <!--       -->
        <!--        <item name="android:tint">@color/colorWhite</item>-->
    </style>



</resources>